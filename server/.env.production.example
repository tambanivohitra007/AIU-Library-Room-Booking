# Production Environment Variables

# Database (MySQL/PostgreSQL for production)
DATABASE_URL="mysql://user:password@localhost:3306/libbook"
# Or PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/libbook"

# JWT Secret (MUST be changed!)
JWT_SECRET="your-production-jwt-secret-generate-a-random-string"

# Server Configuration
PORT=5000
NODE_ENV=production

# Client URL for CORS
CLIENT_URL="https://yourdomain.com"

# Session Settings
SESSION_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
